<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MenuActivity"
        android:orientation="vertical">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#ffffff"
            android:layout_weight="1">

        <ImageView
                android:id="@+id/imgBack_Cart"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/back"
                android:scaleType="fitXY"
                android:layout_alignParentBottom="true"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="16dp"
                android:text="장바구니"/>

    </RelativeLayout>

    <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:background="#ffffff"
            android:overScrollMode="never"
            android:layout_weight="5">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5">

            <ImageView
                    android:id="@+id/imgLight_Cart"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/light"
                    android:layout_marginLeft="112dp"
                    android:layout_marginTop="32dp"
                    android:scaleType="fitXY"/>

            <ImageView
                    android:layout_width="120dp"
                    android:layout_height="100dp"
                    android:scaleType="fitXY"
                    android:layout_marginTop="24dp"
                    android:src="@drawable/line"/>

            <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/menu_cart"
                    android:layout_marginRight="-62dp"
                    android:layout_marginTop="24dp"
                    android:layout_alignParentRight="true"/>

            <TextView
                    android:id="@+id/tvInfo_Cart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="124dp"
                    android:layout_marginLeft="48dp"
                    android:textSize="12sp"
                    android:textColor="#000000"
                    android:lineSpacingExtra="8dp"
                    android:text="주문하기를 누르신 후, 테이블에 부착된\nQR코드를 인식하시면 주문이 전송됩니다."/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@id/tvInfo_Cart"
                    android:layout_marginTop="44dp"
                    android:background="@drawable/shdow"
                    android:orientation="vertical"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/linear1_Cart"
                    android:layout_marginTop="-28dp"
                    android:background="@drawable/layoutround"/>

            <LinearLayout
                    android:id="@+id/linear1_Cart"
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:layout_below="@id/tvInfo_Cart"
                    android:layout_marginTop="50dp"
                    android:orientation="vertical">

                <View
                        android:layout_width="123dp"
                        android:layout_height="28dp"
                        android:background="#FFD843"
                        android:layout_gravity="center"/>

            </LinearLayout>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CART"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="34sp"
                    android:layout_below="@id/tvInfo_Cart"
                    android:gravity="center"
                    android:layout_marginTop="28dp"/>

            <ListView
                    android:id="@+id/listSelect_Cart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:listSelector="@android:color/transparent"
                    android:layout_below="@+id/linear1_Cart"
                    android:divider="@drawable/list_divider"
                    android:dividerHeight="1dp"
                    android:clickable="false"
                    android:focusable="false"
                    android:paddingTop="16dp">

            </ListView>

            <View
                android:id="@+id/view1_Cart"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/listSelect_Cart"
                android:layout_marginLeft="48dp"
                android:layout_marginRight="48dp"
                android:layout_marginTop="24dp"
                android:background="#FFDCCE"/>

            <LinearLayout
                android:id="@+id/linear3_Cart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view1_Cart"
                android:paddingTop="30dp"
                android:paddingBottom="30dp"
                android:background="#ffffff"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/linMenuAdd_Cart"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:background="@drawable/cartround"
                    android:padding="12dp"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:src="@drawable/plus_2"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:layout_gravity="center"
                        android:paddingRight="24dp"
                        android:layout_marginLeft="8dp"
                        android:text="더 담으러 가기"/>

                </LinearLayout>

            </LinearLayout>

            <View
                    android:id="@+id/view2_Cart"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/linear3_Cart"
                    android:layout_marginLeft="48dp"
                    android:layout_marginRight="48dp"
                    android:background="#FFDCCE"/>

            <View
                    android:id="@+id/view3_Cart"
                    android:layout_width="60dp"
                    android:layout_height="10dp"
                    android:layout_below="@id/view2_Cart"
                    android:layout_marginLeft="44dp"
                    android:layout_marginTop="34dp"
                    android:background="#FFE996"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="요청사항"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_below="@id/view2_Cart"
                android:layout_marginLeft="48dp"
                android:layout_marginTop="24dp"
                android:textColor="#000000"/>
            
            <EditText
                    android:id="@+id/edtRequest_Cart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/view3_Cart"
                    android:layout_marginTop="24dp"
                    android:background="@drawable/editround"
                    android:textSize="12sp"
                    android:textColor="#000000"
                    android:layout_marginLeft="48dp"
                    android:layout_marginRight="48dp"
                    android:padding="12dp"
                    android:paddingLeft="8dp"
                    android:layout_marginBottom="24dp"/>

    </RelativeLayout>

    </ScrollView>

    <RelativeLayout
            android:id="@+id/Relative2_Cart"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#ffffff"
            android:layout_weight="1">

        <LinearLayout
                android:id="@+id/linear2_Cart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffffff"
                android:orientation="vertical">

            <LinearLayout
                    android:id="@+id/linCart_Cart"
                    android:layout_width="wrap_content"
                    android:layout_height="66dp"
                    android:orientation="horizontal"
                    android:background="@drawable/cartround"
                    android:paddingLeft="48dp"
                    android:paddingRight="48dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:layout_gravity="center"
                    android:elevation="4dp"
                    android:layout_marginTop="16dp">

                <TextView
                        android:id="@+id/tvAllCount_Cart"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:text="1"
                        android:background="@drawable/circle"
                        android:layout_gravity="center"
                        android:gravity="center"/>

                <TextView
                        android:id="@+id/tvAllPrice_Cart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="57,600원"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:paddingRight="64dp"
                        android:layout_marginLeft="16dp"/>

                <TextView
                        android:id="@+id/tvOrder_Cart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="주문하기"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:layout_gravity="center"/>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
